{
  "compilerOptions": {
    "target": "ES2017",
    "module": "UMD",
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["apps/daas/src/*"]
    }
  },
  "include": [
    "apps/daas/src/**/*.ts",
    "apps/daas/src/**/*.tsx",
    "apps/daas/src/**/*.vue",
    "apps/daas/tests/**/*.ts",
    "apps/daas/tests/**/*.tsx",
    "packages/api/src/*.ts"
  ],
  "exclude": ["node_modules"]
}
